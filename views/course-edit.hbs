<h1>Edit {{course.title}}</h1>

<form action='/courses/edit' method='POST' class='course-form'>
  <div class='input-field'>
    <input
      id='title'
      name='title'
      type='text'
      class='validate'
      value='{{course.title}}'
      required
    />
    <label for='title'>Course name</label>
    <span class='helper-text' data-error='Enter name'></span>

  </div>

  <div class='input-field'>
    <input
      id='price'
      name='price'
      type='number'
      class='validate'
      value='{{course.price}}'
      required
    />
    <label for='price'>Course price</label>
    <span class='helper-text' data-error='Enter price'></span>
  </div>

  <div class='input-field'>
    <input
      id='img'
      name='img'
      type='text'
      class='validate'
      value='{{course.img}}'
      required
    />
    <label for='img'>Image URL</label>
    <span class='helper-text' data-error='Enter URL'></span>
  </div>

  <input type='hidden' name='id' value='{{course._id}}' />

  <button type='submit' class='btn btn-primary'>Edit course</button>
</form>

<form action='/courses/remove' method='POST'>
  <input type='hidden' name='id' value='{{course._id}}' />

  <button type='submit' class='btn red'>Delete course</button>
</form>